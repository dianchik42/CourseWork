<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="Главное окно" Height="443" Width="600">

    <Grid Margin="0,0,0,-42">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="554" Height="336">
            <TextBlock Text="Добро пожаловать в Систему управления проектами" Style="{StaticResource TitleTextStyle}" Width="528"/>

            <Button Content="Сотрудники" Click="ShowEmployees"/>
            <Button Content="Отделы" Click="ShowDepartments"/>
            <Button Content="Договоры" Click="ShowContracts"/>
            <Button Content="Проекты" Click="ShowProjects"/>
            <Button Content="Оборудование" Click="ShowEquipments"/>
            <Button Content="Субконтракты" Click="ShowSubcontractors"/>
            <Button Content="Запросы" Click="OpenRequestsWindow"/>
        </StackPanel>
    </Grid>
</Window>
