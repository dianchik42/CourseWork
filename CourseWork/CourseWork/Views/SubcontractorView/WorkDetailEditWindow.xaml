<Window x:Class="CourseWork.Views.SubcontractorView.WorkDetailEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.Views.SubcontractorView"
        mc:Ignorable="d"
        Title="Редактирование работы подрядчика" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Описание работы:"/>
            <TextBox x:Name="DescriptionTextBox" Width="300"/>

            <Label Content="Стоимость:"/>
            <TextBox x:Name="CostTextBox" Width="300"/>

            <Label Content="Проект:"/>
            <ComboBox x:Name="ProjectComboBox" Width="300" DisplayMemberPath="Name"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="80" Margin="10" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="80" Margin="10" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
