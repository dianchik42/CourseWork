<Window x:Class="CourseWork.Views.RequestsView.CompletedContractsProjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.Views.RequestsView"
        mc:Ignorable="d"
       Title="Стоимость выполненных договоров и проектов" Height="574" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Закрытые договоры и проекты на текущую дату" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Список договоров -->
            <TextBlock Text="Договоры:" FontSize="14" FontWeight="Bold" Margin="0,10,0,10"/>
            <ListBox x:Name="ContractsListBox" Width="550" Height="150"/>

            <!-- Список проектов -->
            <TextBlock Text="Проекты:" FontSize="14" FontWeight="Bold" Margin="0,10,0,10"/>
            <ListBox x:Name="ProjectsListBox" Width="550" Height="150"/>

            <!-- Общая сумма -->
            <TextBlock x:Name="TotalCostTextBlock" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>

            <!-- Кнопка закрытия -->
            <Button Content="Закрыть" Width="100" HorizontalAlignment="Center" Click="CloseWindow"/>
        </StackPanel>
    </Grid>
</Window>
