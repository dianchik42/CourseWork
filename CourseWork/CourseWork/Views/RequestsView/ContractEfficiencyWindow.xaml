<Window x:Class="CourseWork.Views.RequestsView.ContractEfficiencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.Views.RequestsView"
        mc:Ignorable="d"
        Title="Эффективность договоров" Height="500" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Сведения об эффективности договоров" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Список договоров -->
            <TextBlock Text="Договоры:" FontSize="14" FontWeight="Bold" Margin="0,10,0,10"/>
            <ListBox x:Name="ContractsListBox" Width="550" Height="300"/>

            <!-- Кнопка закрытия -->
            <Button Content="Закрыть" Width="100" HorizontalAlignment="Center" Margin="0,20,0,0" Click="CloseWindow"/>
        </StackPanel>
    </Grid>
</Window>
